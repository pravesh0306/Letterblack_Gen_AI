<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="11.0" ExtensionBundleId="com.letterblack.ae.ai.chat" 
    ExtensionBundleVersion="2.0.0" 
    ExtensionBundleName="Letterblack AI Chat" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <ExtensionList>
        <Extension Id="com.letterblack.ae.ai.chat.panel" Version="2.0.0"/>
    </ExtensionList>
    
    <ExecutionEnvironment>
        <HostList>
            <Host Name="AEFT" Version="[18.0,99.9]"/>
            <Host Name="PPRO" Version="[15.0,99.9]"/>
            <Host Name="IDSN" Version="[13.0,99.9]"/>
            <Host Name="PHXS" Version="[19.0,99.9]"/>
            <Host Name="ILST" Version="[22.0,99.9]"/>
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="11.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    
    <DispatchInfoList>
        <Extension Id="com.letterblack.ae.ai.chat.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./host-script.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                        <Parameter>--allow-file-access</Parameter>
                        <Parameter>--allow-file-access-from-files</Parameter>
                        <Parameter>--enable-media-stream</Parameter>
                        <Parameter>--disable-web-security</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>Letterblack AI Chat</Menu>
                    <Geometry>
                        <Size>
                            <Width>450</Width>
                            <Height>650</Height>
                        </Size>
                        <MinSize>
                            <Width>350</Width>
                            <Height>450</Height>
                        </MinSize>
                        <MaxSize>
                            <Width>1600</Width>
                            <Height>1200</Height>
                        </MaxSize>
                    </Geometry>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
